<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <div class="container">
        <!-- Cover Section -->
        <div class="cover-photo">
            <h1>Profile Page</h1>
        </div>
    
        <!-- Profile Information -->
        <div id="profile-view" class="profile-info">
            <img src="<%= user.profilePicture || 'https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y' %>" 
                 alt="Profile Picture" class="profile-pic">
            <h1 class="username"><%= user.username %></h1>
            <p class="details">
                ID: <%= user.id %><br>
                Joined: <%= user.joinedDate %><br>
                Location: <%= user.location %>
            </p>
            <div class="button-container">
                <button class="btn" id="edit-profile-btn" onclick="showEditProfile()">Edit Profile</button>
            </div>
            <div class="stats">
                <p><strong><%= user.stats.continuousWriting %></strong> Continuous Writing</p>
                <p><strong><%= user.stats.readingHours %></strong> of Reading</p>
                <p><strong><%= user.stats.booksRead %></strong> Read Books</p>
            </div>
        </div>
    
        <!-- Edit Profile Section -->
        <div id="edit-profile" class="profile-info hidden">
            <h2>Edit Profile</h2>
            <form id="edit-profile-form" method="post" action="/update-profile">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" value="<%= user.username %>" />
        
                <label for="email">Email Address:</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" readonly />
        
                <label for="gender">Gender:</label>
                <select id="gender" name="gender">
                    <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Male</option>
                    <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Female</option>
                    <option value="other" <%= user.gender === 'other' ? 'selected' : '' %>>Other</option>
                </select>
        
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="<%= user.location %>" />
        
                <label for="bio">About:</label>
                <textarea id="bio" name="bio" rows="4" placeholder="Tell us about yourself..."><%= user.bio %></textarea>
        
                <div class="button-container">
                    <button type="submit" class="btn">Save Changes</button>
                    <button type="button" class="btn cancel-btn" id="cancel-edit-btn" onclick="hideEditProfile()">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/js/profile.js"></script>
</body>
<footer>
    <%- include('includes/footer.ejs') %>
</footer>
</html>
